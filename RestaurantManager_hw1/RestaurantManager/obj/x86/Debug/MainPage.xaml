
<Page
    x:Class="RestaurantManager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RestaurantManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height =".4*" />
            <RowDefinition Height =".1*" />
            <RowDefinition Height=".5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".5*"></ColumnDefinition>
            <ColumnDefinition Width=".5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock x:ConnectionId='1' x:Name="textBlock" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="Restaurant Manager" VerticalAlignment="Bottom" Foreground="White" Grid.ColumnSpan="2" FontSize="61.333"/>
        <TextBlock Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" Text="Internal Test Version" Grid.ColumnSpan="2" FontSize="48"></TextBlock>
        <!--<TextBlock Grid.Row="2" Grid.Column="0" Text="**Go to Orders**" Foreground="White" HorizontalAlignment="Center" FontSize="32" VerticalAlignment="Center"></TextBlock>-->
        <Button x:ConnectionId='2' x:Name="btnGoToExpediate" Grid.Row="2" Grid.Column="0" Content="**Go to Orders**" Background="Gray" Foreground="White" HorizontalAlignment="Center" FontSize="32" VerticalAlignment="Center"                               ></Button>
        <!--<TextBlock Grid.Row="2" Grid.Column="1" Text="**Submit Order**" Foreground="White" HorizontalAlignment="Center" FontSize="32" VerticalAlignment="Center"></TextBlock>-->
        <Button x:ConnectionId='3' x:Name="btnSubmitOrder" Grid.Row="2" Grid.Column="1" Content="**Submit Order**" Background="Gray" Foreground="White" HorizontalAlignment="Center" FontSize="32" VerticalAlignment="Center"                             ></Button>
    </Grid>
</Page>


